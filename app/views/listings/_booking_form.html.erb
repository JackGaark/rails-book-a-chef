<div id="sticky-form">
    <div class="mdl-card__title padded-mini">
      <h2 class="mdl-card__title-text form-head">Make a reservation</h2>
    </div>
        <% @booking = Booking.new(listing_id: @listing.id) %>
        <%= simple_form_for [@listing, @booking] do |f| %>
      <div class="mdl-card__actions form-holder">
        <input type="text" id="flatpickr-input" name="booking[reservation_date]">
        <%= f.input :reservation_time %>
        <%= f.input :guests_count %>
        <%= f.submit class: 'btn btn-sticky' %>
      <% end %>
      </div>
</div>

