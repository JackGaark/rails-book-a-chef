<div class="content">
  <div class="main main-index main-show bg-show">
    <div class="container">

      <div class="row">
        <div class="show-banner" style="background-image: url('<%= cl_image_path @listing.photo %>')">
          <div class="banner-content">
            <h1><%=@listing.description%></h1>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="top-buffer">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2" id="remove-padding-left">
          <%= render "listings/show_components/show_tabs" %>
        </div>
        </div>
      </div>
      <div class="row">
        <div class="map-buffer">
        <div class="show-map col-xs-12 col-sm-12 map-container">
          <div id="map" data-markers="<%= @markers.to_json %>"></div>
        </div>
      </div>
      </div>
    </div>
    <div class="col-sm-6 col-sm-offset-4">
      <%= render "booking_form" %>
    </div>
  </div>
</div>







<script type="text/javascript">
  function toggleVisibility(id) {
    var e = document.getElementById(id)
    console.log(e.style.visibility)
    e.style.visibility = e.style.visibility == "visible" ? "hidden" : "visible"
  }
</script>

