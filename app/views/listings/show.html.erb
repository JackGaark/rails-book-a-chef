  <div class="row">
    <div class="banner" style="background-image: linear-gradient(-225deg, #efc64e78 0%, rgba(85, 92, 97, 0.35) 50%), url('<%= image_path 'dumplings-bg.jpg'%>')">
    </div>
  </div>
  <h1>show page</h2>

