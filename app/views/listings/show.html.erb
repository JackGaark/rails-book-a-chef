          </thead>
          <tbody>
            <tr>
              <tr><%= @listing.min_party_size %></tr>
              <tr><%= @listing.max_party_size %></tr>
              <tr><%= @listing.price_per_person %></tr>
              <tr><%= @listing.description %></tr>
              <tr><%= @listing.user.name %></tr>
              <tr><%= @listing.cuisine %></tr>
            </tr>
          </tbody>
         </table>
      </div>
    </div>

    <div class="booking-form col-sm-4">
      <%= render "booking_form" %>
    </div>


  </div>
